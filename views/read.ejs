<script>
    function toggleTOC() {
        const modal = document.getElementById('toc-modal');
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            // T·ª± ƒë·ªông cu·ªôn t·ªõi ch∆∞∆°ng ƒëang ƒë·ªçc
            const activeChapter = modal.querySelector('.bg-indigo-100');
            if(activeChapter) activeChapter.scrollIntoView({ block: "center" });
        } else {
            modal.classList.add('hidden');
        }
    }

    // ƒê√≥ng modal khi b·∫•m ra ngo√†i v√πng tr·∫Øng
    document.getElementById('toc-modal').addEventListener('click', function(e) {
        if (e.target === this) {
            toggleTOC();
        }
    });
</script>

