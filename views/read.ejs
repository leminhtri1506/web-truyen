<%- include('partials/header') %>

<div class="bg-gray-100 min-h-screen pb-10">
    <div class="max-w-4xl mx-auto bg-white shadow-lg min-h-screen">
        
        <div class="p-4 border-b text-sm text-gray-600">
            <a href="/" class="hover:text-indigo-600">Trang chủ</a> / 
            <a href="/story/<%= story.id %>" class="hover:text-indigo-600 font-bold"><%= story.title %></a> / 
            <span class="text-gray-400"><%= chapter.title %></span>
        </div>

        <div class="p-6 text-center">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800 uppercase mb-2">
                <%= chapter.title %>
            </h1>
            <p class="text-gray-500 text-sm">Đăng ngày: <%= new Date(chapter.created_at).toLocaleDateString('vi-VN') %></p>
        </div>

        <div class="flex justify-center gap-4 mb-8 px-4">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition flex items-center">
                    ⬅ Chương trước
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-gray-500 px-4 py-2 rounded cursor-not-allowed">⬅ Chương trước</button>
            <% } %>

            <a href="/story/<%= story.id %>" class="bg-gray-200 text-gray-700 px-4 py-2 rounded shadow hover:bg-gray-300 transition">
                Mục lục
            </a>

            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition flex items-center">
                    Chương sau ➡
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-gray-500 px-4 py-2 rounded cursor-not-allowed">Chương sau ➡</button>
            <% } %>
        </div>

        <div class="px-6 md:px-12 text-lg leading-relaxed text-gray-800 font-serif text-justify whitespace-pre-wrap chapter-content">
            <%= chapter.content %>
        </div>

        <div class="flex justify-center gap-4 mt-12 mb-8 px-4 border-t pt-8">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition">
                    ⬅ Chương trước
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-gray-500 px-4 py-2 rounded cursor-not-allowed">⬅ Chương trước</button>
            <% } %>

            <a href="/story/<%= story.id %>" class="bg-gray-200 text-gray-700 px-4 py-2 rounded shadow hover:bg-gray-300 transition">
                Mục lục
            </a>

            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition">
                    Chương sau ➡
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-gray-500 px-4 py-2 rounded cursor-not-allowed">Chương sau ➡</button>
            <% } %>
        </div>

        <div class="bg-gray-50 p-6 border-t text-center text-gray-500 italic">
            (Tính năng bình luận đang phát triển...)
        </div>

    </div>
</div>

<%- include('partials/footer') %>