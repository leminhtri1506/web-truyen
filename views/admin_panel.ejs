<%- include('partials/header') %>
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Admin Panel</h1>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white p-5 rounded shadow">
                <h3 class="font-bold mb-3 border-b pb-2">1. Thêm Thể Loại</h3>
                <form action="/admin/add-tag" method="POST" class="flex gap-2">
                    <input type="text" name="name" class="border p-2 rounded flex-grow" placeholder="Tên tag..."
                        required>
                    <button class="bg-green-600 text-white px-4 rounded hover:bg-green-700">Lưu</button>
                </form>
                <div class="mt-3 flex flex-wrap gap-2">
                    <% tags.forEach(t=> { %> <span class="bg-gray-100 px-2 rounded text-sm border">
                            <%= t.name %>
                        </span>
                        <% }) %>
                </div>
            </div>

            <div class="bg-white p-5 rounded shadow">
                <h3 class="font-bold mb-3 border-b pb-2">2. Thêm Truyện Mới</h3>
                <form action="/admin/add-story" method="POST" enctype="multipart/form-data" class="space-y-3">
                    <input type="text" name="title" class="w-full border p-2 rounded" placeholder="Tên truyện" required>
                    <textarea name="description" class="w-full border p-2 rounded" placeholder="Mô tả..."></textarea>
                    <div class="mb-2">
                        <label class="block text-xs text-gray-500 mb-1">Trạng thái:</label>
                        <select name="status" class="w-full border p-2 rounded">
                            <option value="Đang cập nhật">Đang cập nhật</option>
                            <option value="Đã hoàn thành">Đã hoàn thành</option>
                        </select>
                    </div>
                    <div class="border p-2 rounded h-32 overflow-y-auto">
                        <p class="text-xs text-gray-500 mb-1">Chọn Tag (Giữ Ctrl để chọn nhiều):</p>
                        <select name="tags" multiple class="w-full h-full outline-none">
                            <% tags.forEach(t=> { %> <option value="<%= t.id %>">
                                    <%= t.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <div>
                        <p class="text-xs text-gray-500 mb-1">Ảnh bìa:</p>
                        <input type="file" name="cover" class="w-full text-sm">
                    </div>
                    <button class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 font-bold">Tạo
                        Truyện</button>
                </form>
            </div>
        </div>

        <div class="lg:col-span-2 bg-white p-5 rounded shadow">
            <h3 class="font-bold mb-3 border-b pb-2">Danh sách truyện (Chọn để thêm chương)</h3>
            <div class="overflow-y-auto max-h-screen">
                <% stories.forEach(s=> { %>
                    <div class="flex justify-between items-center p-3 border-b hover:bg-gray-50">
                        <span class="font-medium">
                            <%= s.title %>
                        </span>
                        <a href="/story/<%= s.id %>"
                            class="text-xs bg-indigo-100 text-indigo-700 px-3 py-1 rounded hover:bg-indigo-200">
                            Quản lý chương &rarr;
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>