<%- include('partials/header') %>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">

<style>
    .font-reading {
        font-family: 'Merriweather', serif;
        font-size: 1.25rem; /* ~20px */
        line-height: 2;     /* Giãn dòng rộng đọc cho sướng */
        color: #333;
    }
    .font-ui {
        font-family: 'Nunito', sans-serif;
    }
</style>

<div class="bg-[#f9f9f9] min-h-screen pb-10 font-ui"> <div class="max-w-4xl mx-auto bg-white shadow-lg min-h-screen">
        
        <div class="p-4 border-b text-sm text-gray-600">
            <a href="/" class="hover:text-indigo-600">Trang chủ</a> / 
            <a href="/story/<%= story.id %>" class="hover:text-indigo-600 font-bold"><%= story.title %></a> / 
            <span class="text-gray-400"><%= chapter.title %></span>
        </div>

        <div class="p-6 text-center">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800 uppercase mb-2">
                <%= chapter.title %>
            </h1>
            <p class="text-gray-500 text-sm">Đăng ngày: <%= new Date(chapter.created_at).toLocaleDateString('vi-VN') %></p>
        </div>

        <div class="flex justify-center gap-4 mb-8 px-4 text-sm font-bold">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-indigo-50 hover:border-indigo-500 transition">
                    ⬅ Trước
                </a>
            <% } else { %>
                <button class="bg-gray-100 text-gray-400 border border-gray-200 px-4 py-2 rounded cursor-not-allowed">⬅ Trước</button>
            <% } %>

            <a href="/story/<%= story.id %>" class="bg-gray-100 border border-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-200 transition">
                Mục lục
            </a>

            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-indigo-50 hover:border-indigo-500 transition">
                    Sau ➡
                </a>
            <% } else { %>
                <button class="bg-gray-100 text-gray-400 border border-gray-200 px-4 py-2 rounded cursor-not-allowed">Sau ➡</button>
            <% } %>
        </div>

        <div class="px-6 md:px-12 text-justify whitespace-pre-wrap font-reading">
            <%= chapter.content %>
        </div>

        <div class="flex justify-center gap-4 mt-12 mb-8 px-4 border-t pt-8 text-sm font-bold">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="bg-indigo-600 text-white px-6 py-3 rounded shadow hover:bg-indigo-700 transition">
                    ⬅ Chương trước
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-white px-6 py-3 rounded cursor-not-allowed">⬅ Chương trước</button>
            <% } %>

            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="bg-indigo-600 text-white px-6 py-3 rounded shadow hover:bg-indigo-700 transition">
                    Chương sau ➡
                </a>
            <% } else { %>
                <button class="bg-gray-300 text-white px-6 py-3 rounded cursor-not-allowed">Chương sau ➡</button>
            <% } %>
        </div>

    </div>
</div>

<%- include('partials/footer') %>