<%- include('partials/header') %>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">

<style>
    /* C·∫§U H√åNH M√ÄU S·∫ÆC CHO 2 CH·∫æ ƒê·ªò */
    :root {
        --bg-body: #f9f9f9;
        --bg-paper: #ffffff;
        --text-primary: #333333;
        --text-secondary: #4a5568;
        --border-color: #e2e8f0;
        --hover-bg: #edf2f7;
        --highlight: #4f46e5;
    }

    /* DARK MODE */
    body.dark-mode {
        --bg-body: #111111;
        --bg-paper: #1a1a1a;
        --text-primary: #e0e0e0;
        --text-secondary: #a0aec0;
        --border-color: #2d3748;
        --hover-bg: #2d3748;
        --highlight: #818cf8;
    }

    /* √Åp d·ª•ng bi·∫øn m√†u */
    .app-bg { background-color: var(--bg-body); color: var(--text-primary); transition: background 0.3s, color 0.3s; }
    .app-paper { background-color: var(--bg-paper); border-color: var(--border-color); }
    .app-text-main { color: var(--text-primary); }
    .app-text-sub { color: var(--text-secondary); }
    .app-border { border-color: var(--border-color); }
    
    .font-reading { font-family: 'Merriweather', serif; font-size: 1.25rem; line-height: 2; }
    .font-ui { font-family: 'Nunito', sans-serif; }

    /* Scrollbar */
    .custom-scrollbar::-webkit-scrollbar { width: 6px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: var(--bg-body); }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #888; border-radius: 3px; }

    /* N√∫t ƒëi·ªÅu h∆∞·ªõng */
    .btn-nav {
        background-color: var(--bg-paper);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        cursor: pointer; /* B·∫Øt bu·ªôc c√≥ ƒë·ªÉ click ƒë∆∞·ª£c */
        position: relative;
        z-index: 50; /* ƒê·∫£m b·∫£o n√∫t n·ªïi l√™n tr√™n */
    }
    body.dark-mode .btn-nav:hover { background-color: var(--hover-bg); color: var(--text-primary); }
</style>

<div class="app-bg min-h-screen pb-10 font-ui relative">
    
    <div id="toc-modal" class="hidden fixed inset-0 bg-black bg-opacity-70 z-[9999] flex items-center justify-center p-4">
        <div class="app-paper rounded-lg shadow-2xl w-full max-w-md max-h-[80vh] flex flex-col border app-border relative z-[10000]">
            <div class="p-4 border-b app-border flex justify-between items-center bg-indigo-600 text-white rounded-t-lg">
                <h3 class="font-bold text-lg">Danh S√°ch Ch∆∞∆°ng</h3>
                <button id="close-toc-btn" class="hover:bg-indigo-700 rounded p-1 cursor-pointer">‚úñ ƒê√≥ng</button>
            </div>
            <div class="overflow-y-auto p-2 custom-scrollbar flex-1">
                <% allChapters.forEach(c => { %>
                    <a href="/read/<%= c.id %>" 
                       class="block px-4 py-3 border-b app-border transition rounded
                       <%= c.id == chapter.id ? 'bg-indigo-100 dark:bg-indigo-900 font-bold text-indigo-800 dark:text-indigo-200 border-l-4 border-indigo-600' : 'app-text-sub hover:bg-gray-100 dark:hover:bg-gray-800' %>">
                        <%= c.title %>
                    </a>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto app-paper shadow-lg min-h-screen transition-colors duration-300 relative z-10">
        
        <div class="p-4 border-b app-border text-sm app-text-sub">
            <a href="/" class="hover:text-indigo-500">Trang ch·ªß</a> / 
            <a href="/story/<%= story.id %>" class="hover:text-indigo-500 font-bold"><%= story.title %></a> / 
            <span class="opacity-70"><%= chapter.title %></span>
        </div>

        <div class="p-6 text-center">
            <h1 class="text-2xl md:text-3xl font-bold app-text-main uppercase mb-2">
                <%= chapter.title %>
            </h1>
            <p class="app-text-sub text-sm">ƒêƒÉng ng√†y: <%= new Date(chapter.created_at).toLocaleDateString('vi-VN') %></p>
        </div>

        <div class="flex flex-wrap justify-center gap-2 md:gap-4 mb-8 px-4 text-sm font-bold sticky top-[64px] app-paper py-3 border-b app-border z-40 shadow-sm transition-colors duration-300">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="btn-nav px-3 py-2 rounded hover:shadow transition flex items-center">
                    ‚¨Ö <span class="hidden md:inline ml-1">Tr∆∞·ªõc</span>
                </a>
            <% } else { %>
                <button class="btn-nav opacity-50 cursor-not-allowed px-3 py-2 rounded">‚¨Ö <span class="hidden md:inline ml-1">Tr∆∞·ªõc</span></button>
            <% } %>

            <button id="toc-btn" type="button" class="btn-nav px-4 py-2 rounded hover:shadow transition flex items-center gap-2">
                <span>üìë</span> <span class="hidden sm:inline">M·ª•c l·ª•c</span>
            </button>

            <button id="theme-btn" type="button" class="btn-nav px-4 py-2 rounded hover:shadow transition flex items-center gap-2 text-yellow-600 dark:text-yellow-400">
                <span id="theme-icon">‚òÄ</span> <span class="hidden sm:inline">Giao di·ªán</span>
            </button>

            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="btn-nav px-3 py-2 rounded hover:shadow transition flex items-center">
                    <span class="hidden md:inline mr-1">Sau</span> ‚û°
                </a>
            <% } else { %>
                <button class="btn-nav opacity-50 cursor-not-allowed px-3 py-2 rounded"><span class="hidden md:inline mr-1">Sau</span> ‚û°</button>
            <% } %>
        </div>

        <div class="px-6 md:px-12 text-justify whitespace-pre-wrap font-reading app-text-main transition-colors duration-300">
            <%= chapter.content %>
        </div>

        <div class="flex justify-center gap-4 mt-12 mb-8 px-4 border-t app-border pt-8 text-sm font-bold">
            <% if (prevChapter) { %>
                <a href="/read/<%= prevChapter.id %>" class="bg-indigo-600 text-white px-6 py-3 rounded shadow hover:bg-indigo-700 transition">
                    ‚¨Ö Ch∆∞∆°ng tr∆∞·ªõc
                </a>
            <% } else { %>
                <button class="bg-gray-300 dark:bg-gray-700 text-white px-6 py-3 rounded cursor-not-allowed">‚¨Ö Ch∆∞∆°ng tr∆∞·ªõc</button>
            <% } %>
            <% if (nextChapter) { %>
                <a href="/read/<%= nextChapter.id %>" class="bg-indigo-600 text-white px-6 py-3 rounded shadow hover:bg-indigo-700 transition">
                    Ch∆∞∆°ng sau ‚û°
                </a>
            <% } else { %>
                <button class="bg-gray-300 dark:bg-gray-700 text-white px-6 py-3 rounded cursor-not-allowed">Ch∆∞∆°ng sau ‚û°</button>
            <% } %>
        </div>

    </div>
</div>

<script>
    // Ch·ªù cho trang web t·∫£i xong ho√†n to√†n m·ªõi ch·∫°y code JS
    document.addEventListener('DOMContentLoaded', function() {
        console.log("Script Read Page Loaded");

        // --- 1. X·ª¨ L√ù M·ª§C L·ª§C ---
        const tocModal = document.getElementById('toc-modal');
        const tocBtn = document.getElementById('toc-btn');
        const closeTocBtn = document.getElementById('close-toc-btn');

        function openTOC() {
            if(tocModal) {
                tocModal.classList.remove('hidden');
                // Cu·ªôn t·ªõi ch∆∞∆°ng ƒëang ƒë·ªçc
                const activeChapter = tocModal.querySelector('.border-l-4'); 
                if(activeChapter) activeChapter.scrollIntoView({ block: "center" });
            }
        }

        function closeTOC() {
            if(tocModal) tocModal.classList.add('hidden');
        }

        // G√°n s·ª± ki·ªán click
        if(tocBtn) tocBtn.addEventListener('click', openTOC);
        if(closeTocBtn) closeTocBtn.addEventListener('click', closeTOC);
        
        // B·∫•m ra ngo√†i popup ƒë·ªÉ ƒë√≥ng
        if(tocModal) {
            tocModal.addEventListener('click', function(e) {
                if (e.target === this) closeTOC();
            });
        }


        // --- 2. X·ª¨ L√ù DARK MODE ---
        const themeBtn = document.getElementById('theme-btn');
        const themeIcon = document.getElementById('theme-icon');
        const body = document.body;

        // Ki·ªÉm tra LocalStorage ngay khi v√†o trang
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            body.classList.add('dark-mode');
            if(themeIcon) themeIcon.innerText = 'üåô';
        } else {
            if(themeIcon) themeIcon.innerText = '‚òÄ';
        }

        if(themeBtn) {
            themeBtn.addEventListener('click', function() {
                body.classList.toggle('dark-mode');
                
                if (body.classList.contains('dark-mode')) {
                    localStorage.setItem('theme', 'dark');
                    if(themeIcon) themeIcon.innerText = 'üåô';
                } else {
                    localStorage.setItem('theme', 'light');
                    if(themeIcon) themeIcon.innerText = '‚òÄ';
                }
            });
        }
    });
</script>

